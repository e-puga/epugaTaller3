<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="epugaTaller3.Views.DetalleFrmContacto"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DetalleFrmContacto">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label
                HorizontalOptions="Center"
                Text="Detalle Contacto"
                TextColor="Red"
                VerticalOptions="Center" />

            <Label
                x:Name="lblTipoIdentificacion"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblIdentificacion"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblNombres"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblApellidos"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblFecha"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblCorreo"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblSalario"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                x:Name="lblAporteIESS"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Button
                x:Name="btnExportar"
                Clicked="btnExportar_Clicked"
                MaximumWidthRequest="200"
                Text="Exportar datos" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>